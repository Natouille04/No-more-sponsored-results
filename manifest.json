{
    "manifest_version": 3,
    "name": "No more sponsor result",
    "version": "1.0",
    "description": "Remove sponsored results",

    "icons": {
        "16": "images/logo.png",
        "48": "images/logo.png",
        "128": "images/logo.png"
    },

    "action": {
        "default_icon": {
            "16": "images/logo.png",
            "48": "images/logo.png",
            "128": "images/logo.png"
        }
    },

    "content_scripts": [
        {
            "matches": [
                "https://www.google.com/search*"
            ],
            "js": [
                "scripts/main.js"
            ]
        }
    ]
}
